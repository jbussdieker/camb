#!/usr/bin/env ruby
require 'camb'
require 'optparse'

options = {}

OptionParser.new do |o|
  o.on("--interval INTERVAL", Float, "Interval to test") {|n|
    options[:interval] = n
  }
  o.on("--host HOST", String, "Hostname to test") {|n|
    options[:host] = n
  }
  o.on("--port PORT", Integer, "Port to test") {|n|
    options[:port] = n
  }
  o.parse!
end

test = Camb::Test.new(options)
test.start
