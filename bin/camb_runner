#!/usr/bin/env ruby
require 'camb'
require 'optparse'
require 'json'

options = {}

OptionParser.new do |o|
  o.on("--host HOST", String, "Hostname to test") {|n|
    options[:host] = n
  }
  o.on("--port PORT", Integer, "Port to test") {|n|
    options[:port] = n
  }
  o.parse!
end

runner = Camb::Runner.new(options)
puts runner.run.to_json
